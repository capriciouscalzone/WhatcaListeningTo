
{{#each songs as |song| }}
<div class="row mb-4 song">
  <div class="col-md-5">
    <h2>
   
      <a href="/song/{{song.id}}">{{song.title}}</a>
    </h2>
    <p>
      
      
      <span class="artist">{{song.artist}}</span>

      <span class="genre">{{song.genre}}</span>
      
    </p>
    <p>Posted by {{song.user.name}} on {{format_date song.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{song.description}}
    </p>
  </div>
</div>
{{/each}}
