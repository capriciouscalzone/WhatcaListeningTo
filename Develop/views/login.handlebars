<div class="flex m-2">
  
  <div class=" card col-md-4 text-light m-4 " style="background-color: #191414;">
    <h2 class="m-3">Login</h2>

    <form class="form login-form m-2">
      <div class="form-group m-2">
        <div>
        <label for="email-login">Email:</label>
        </div>
        <div>
        <input class="form-input" type="text" id="email-login" />
        </div>
      </div>
      <div class="form-group m-2">
        <div>
        <label for="password-login">Password:</label>
        </div>
        <div>
        <input class="form-input" type="password" id="password-login" />
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-outline-success mt-3 mb-2" type="submit">Login</button>
      </div>
    </form>
  </div>

  
  <div class=" card col-md-4 text-light m-4 " style="background-color: #191414;">
    <h2 class="m-3">Signup</h2>

    <form class="form signup-form m-2">
      <div class="form-group m-1">
        <div>
        <label for="name-signup">Name:</label>
        </div>
        <div>
        <input class="form-input" type="text" id="name-signup" />
        </div>
      </div>
      <div class="form-group m-1">
        <div>
        <label for="email-signup">Email:</label>
        </div>
        <div>
        <input class="form-input" type="text" id="email-signup" />
        </div>
      </div>
      <div class="form-group m-1">
        <div>
        <label for="password-signup">Password:</label>
        </div>
        <div>
        <input class="form-input" type="password" id="password-signup" />
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-outline-success mt-3 mb-2" type="submit">Sign-Up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
